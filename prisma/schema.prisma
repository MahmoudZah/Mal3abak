// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  role      String   // PLAYER, OWNER, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courts       Court[]       @relation("OwnerCourts")
  reservations Reservation[]
}

// Court = Venue/Club (e.g., نادي الشمس)
model Court {
  id           String   @id @default(cuid())
  name         String
  description  String?
  governorate  String   // المحافظة (e.g., القاهرة)
  region       String   // المنطقة (e.g., مدينة نصر)
  location     String?  // Full address (optional)
  latitude     Float?   // GPS coordinates for map
  longitude    Float?   // GPS coordinates for map
  images       String   // JSON string array of URLs
  
  // Payment details for owner
  paymentName      String?  // Name for payment (e.g., "أحمد محمد")
  paymentPhone     String?  // Phone for InstaPay/Vodafone Cash
  paymentMethod    String?  // e.g., "InstaPay", "Vodafone Cash", "Both"
  
  ownerId      String
  owner        User     @relation("OwnerCourts", fields: [ownerId], references: [id])
  
  fields       Field[]  // Multiple fields within this venue
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
  @@index([governorate, region])
}

// Field = Individual playing field (e.g., ملعب خماسي 1، ملعب سباعي)
model Field {
  id           String   @id @default(cuid())
  name         String   // e.g., "ملعب خماسي 1"
  type         String   // e.g., "5v5", "7v7", "11v11"
  pricePerHour Float
  courtId      String
  court        Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)
  
  reservations Reservation[]
  
  createdAt DateTime @default(now())

  @@index([courtId])
}

model Reservation {
  id              String   @id @default(cuid())
  visitorName     String?
  visitorPhone    String?
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])
  fieldId         String
  field           Field    @relation(fields: [fieldId], references: [id])
  startTime       DateTime
  endTime         DateTime
  status          String   // PENDING, CONFIRMED, CANCELLED
  totalPrice      Float    // Total including service fee
  serviceFee      Float    @default(10) // Platform service fee (10 EGP)
  paymentProof    String?  // URL to payment confirmation image

  createdAt DateTime @default(now())

  @@index([fieldId, startTime])
  @@index([userId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}
